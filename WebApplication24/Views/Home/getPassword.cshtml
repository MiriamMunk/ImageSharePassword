@model ViewModel;
<div class="jumbotron">
    <form method="post" action="/home/Viewimage">
        @if (!String.IsNullOrEmpty(Model.IncorrectPasswordMessage))
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <strong>@Model.IncorrectPasswordMessage</strong>
            </div>
        }
        <div class="row">
            <h3>Please enter the password for this image:</h3>
        </div>
        <div class="row mt-2">
            <input type="password" name="password" placeholder="password" />
        </div>
        <div class="row mt-2">
            <input type="hidden" value="@Model.Image.Id" name="id" />
            <button class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
